<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:XamlPlayground.ViewModels"
             xmlns:ae="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:behaviors="clr-namespace:XamlPlayground.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="XamlPlayground.Views.MainView"
             x:CompileBindings="True" x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>
  <Grid ColumnDefinitions="50*,Auto,50*" RowDefinitions="Auto,*">
    <Grid Grid.Column="0"
          Grid.ColumnSpan="3"
          Grid.Row="0"
          ColumnDefinitions="Auto,*,Auto"
          Background="LightGray">
      <DockPanel Grid.Column="0" >
        <Image Source="/Assets/avalonia-logo.ico"
               Margin="6,6,0,6" 
               Height="32"
               DockPanel.Dock="Left"/>
        <Label FontSize="18"
               Margin="6,6,0,6" 
               VerticalAlignment="Center"
               Content="Xaml Playground"/>
      </DockPanel>
      <DockPanel VerticalAlignment="Center"
                 HorizontalAlignment="Right"
                 LastChildFill="False"
                 Grid.Column="1">
        <Button DockPanel.Dock="Left"
                Margin="0,0,10,0"
                Background="White"
                Foreground="Black"
                Content="Run" 
                Command="{Binding RunCommand}" />
        <CheckBox DockPanel.Dock="Left"
                  Margin="0,0,0,0"
                  Content="Live Preview" 
                  IsChecked="{Binding EnableAutoRun}">
          <CheckBox.Styles>
            <Style Selector="CheckBox /template/ Path#CheckGlyph">
              <Setter Property="Fill" Value="White" />
            </Style>
            <Style Selector="CheckBox:checked /template/ Path#CheckGlyph">
              <Setter Property="Fill" Value="Black" />
            </Style>
            <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
              <Setter Property="BorderBrush" Value="Black" />
              <Setter Property="Background" Value="White" />
            </Style>
          </CheckBox.Styles>
        </CheckBox>
      </DockPanel>
      <Menu Grid.Column="2">
        <MenuItem Background="White"
                  Margin="12,0,6,0"
                  Items="{Binding Samples}">
          <MenuItem.Header>
            <StackPanel Orientation="Horizontal">
              <Label Content="Samples"/>
              <Path Data="M 0 0 L 7 7 L 14 0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="None"
                    Stroke="{DynamicResource SystemBaseHighColor}"
                    StrokeThickness="1" 
                    Margin="6,0,0,0"/>
            </StackPanel>
          </MenuItem.Header>
          <MenuItem.Styles>
            <Style Selector="MenuItem > MenuItem" x:DataType="vm:SampleViewModel">
              <Setter Property="Padding" Value="12"/>
              <Setter Property="Header" Value="{Binding Name}"/>
              <Setter Property="Command" Value="{Binding OpenCommand}"/>
            </Style>
          </MenuItem.Styles>
        </MenuItem>
      </Menu>
    </Grid>
    <DockPanel Grid.Column="0" Grid.Row="1">
      <Label Content="{Binding LastErrorMessage}" 
             IsVisible="{Binding !!LastErrorMessage}"
             Background="Red"
             Foreground="White"
             DockPanel.Dock="Bottom" />
      <ae:TextEditor Margin="0"
                     Background="WhiteSmoke"
                     SyntaxHighlighting="XML"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas,Menlo,Monospace"
                     ShowLineNumbers="True"
                     FontWeight="Normal"
                     FontSize="14"
                     WordWrap="False">
        <i:Interaction.Behaviors>
          <behaviors:DocumentTextBindingBehavior Text="{Binding Xaml, Mode=TwoWay}" />
        </i:Interaction.Behaviors>
      </ae:TextEditor>
    </DockPanel>
    <GridSplitter Grid.Column="1"
                  Grid.Row="1"
                  Width="6"
                  ResizeBehavior="PreviousAndNext"
                  ResizeDirection="Columns"
                  Background="Transparent"/>
    <ScrollViewer Grid.Column="2" 
                  Grid.Row="1" 
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto">
      <ContentControl Content="{Binding Control}" />
    </ScrollViewer>
  </Grid>
</UserControl>
